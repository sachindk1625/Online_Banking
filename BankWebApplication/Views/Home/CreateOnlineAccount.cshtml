@model OnlineAccounts
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    AccountDetails acc = ViewBag.data;
    
}

@{ 
    if(ViewBag.err!=null)
    {
        <p class="danger">@ViewBag.err</p>
    }
}

<div class="container-fluid">
    <div class="row">
        <div class="page-header">
            <h1>Hello @acc.FirstName</h1>
        </div>
    </div>
    <div class="row">
        <b>Online Account for Account Number: @acc.AccountNumber</b>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="page-header" style="color:darkblue">
            <p>Choose your User ID and Password</p>
        </div>
    </div>
    <div class="row">
        <form asp-action="OnlineAccount" method="post" class="form-horizontal">
            <div class="form-group">
                <p><label asp-for="UserName">User ID:</label>
                    <input type="text" asp-for="UserName" />
                </p>
                </div>
            <div class="form-group">
                <p>
                <label>Password:</label>
                <input type="password" asp-for="Password"/>
                </p>
                <p>
                    <label asp-for="AccountNumber"></label>
                    <input asp-for="AccountNumber" value="@acc.AccountNumber"/>
                </p>
            </div>
            <div class="form-group">
                <input type="submit" value="SUBMIT" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>