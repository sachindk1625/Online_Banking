@{
}
@model IEnumerable<AccountDetails>

    @{ 
        AccountDetails account = new AccountDetails();
        var Fname = "";
        foreach(AccountDetails acc in Model)
        {
            Fname = acc.FirstName;
        }
    }
@if(ViewBag.err!=null)
{
    <h1 class="danger">@ViewBag.err</h1>
}

<div class="container-fluid">
    <div class="row">
        <div class="page-header">
            <h1>Hello @Fname!</h1>
        </div>
    </div>
</div>
<div class="container">
    <form asp-action="SelectAccount" class="form-horizontal">
        <div class="form-group">
            <label> Select the Account Number you want to open Online account with: </label>
            <select name="accNo">
                <option value="">Chose</option>
                @foreach(AccountDetails acc in Model)
                {
                    <option value="@acc.AccountNumber">@acc.AccountNumber</option>
                }
            </select>
        </div>
        <div class="form-group">
            <input type="submit" value="SUBMIT" class="btn btn-primary"/>
        </div>
    </form>
</div>